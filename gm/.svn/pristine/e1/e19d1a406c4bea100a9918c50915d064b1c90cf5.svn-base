package cc.ywxm.dao.impl.game;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import cc.ywxm.dao.game.RegisterDao;

@Repository
public class RegisterDaoImpl implements RegisterDao
{
	@Resource
	private JdbcTemplate jdbcTemplate;

	public int count(String date)
	{
		String sql = "SELECT COUNT(1) rdate FROM register_log WHERE DATE(rtime) = ?";
		return jdbcTemplate.queryForInt(sql, new Object[]
		{ date });
	}

	@SuppressWarnings("unchecked")
	public List<Integer> gets(String date)
	{
		String sql = "SELECT player FROM register_log WHERE DATE(rtime) = ?";
		return (List<Integer>) jdbcTemplate.queryForList(sql, new Object[]
		{ date }, Integer.class);
	}

}
