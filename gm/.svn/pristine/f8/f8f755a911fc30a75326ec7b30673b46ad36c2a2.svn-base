<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE html>
<html>
<head>
<base href="<%=basePath%>">

<title>玩家道具查询</title>

<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta http-equiv="keywords" content="英雄领域,亿网星漫">
<meta http-equiv="description" content="Online Charge System">
<link id="easyuiTheme" rel="stylesheet" type="text/css"
	href="easyUI/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="easyUI/themes/icon.css">
<link rel="stylesheet" type="text/css" href="css/style.css">
<script type="text/javascript" src="easyUI/jquery-1.8.0.min.js"></script>
<script type="text/javascript" src="easyUI/jquery.easyui.min.js"></script>
<script type="text/javascript" src="easyUI/locale/easyui-lang-zh_CN.js"></script>
<script type="text/javascript">
		function query(type){
			var arr = $('#thisform').serializeArray();
			var param = {};
			$.each(arr, function(index) {
			    if(this['value'] != ''){
					if (param[this['name']]) {
						param[this['name']] = param[this['name']] + "," + this['value'];
					} else {
						param[this['name']] = this['value'];
					}
				}
			});
			$('#tab').datagrid({
			    title:'玩家道具信息',
			    queryParams:param,
			    singleSelect:true,
				fitColumns:true,
				height:380,
				url:'ajax/propInfo_gets?type=' + type,
				loadMsg:'正在查询...',
				onLoadSuccess:function(data){
			    	$('#info').html('找到' + data.total + '个道具');
				},
				onLoadError:function(){
				    alert('数据加载错误');
				},
				columns:[[
					{field:'id',title:'道具ID',width:15},
					{field:'kind',title:'道具SID',width:15},
					{field:'area',title:'区域',width:20},
					{field:'location',title:'在区域中的位置',width:20},
					{field:'amount',title:'数量',width:20}
				]]
			});
		}
	</script>
</head>

<body>
	<div id="title">
		<label>数据查询&gt;&gt;玩家道具查询</label>
	</div>
	<form id="thisform">
		<fieldset>
			<legend>查询条件</legend>
			<label for="player">&nbsp;&nbsp;按玩家ID：</label><input id="player"
				type="text" name="player" value="" data-options="min:1,precision:0"
				class="easyui-numberbox">&nbsp;&nbsp;
			<button type="button" onclick="query(1);">查询</button>
			<br /> <label for="nickname">按玩家昵称：</label><input id="nickname"
				type="text" name="nickname" value="">&nbsp;&nbsp;
			<button type="button" onclick="query(2);">查询</button>
			<br /> &nbsp;&nbsp;<label id="info" style="color: red;"></label>
		</fieldset>
	</form>
	<table id="tab"></table>
</body>
</html>
