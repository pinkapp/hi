<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib prefix="s" uri="/struts-tags"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE html>
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>留存率</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta http-equiv="keywords" content="英雄领域,亿网星漫">
    <meta http-equiv="description" content="Online Charge System">
	<link id="easyuiTheme" rel="stylesheet" type="text/css" href="easyUI/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="easyUI/themes/icon.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<script type="text/javascript" src="easyUI/jquery-1.8.0.min.js"></script>
	<script type="text/javascript" src="easyUI/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="easyUI/locale/easyui-lang-zh_CN.js"></script>
	<script type="text/javascript">
	    $(function(){
			//$('#qdate1').datebox('setValue',new Date());
		});
		function query(){
			var param = {};
			var maxDate = $('#maxDate').val();
			var qdate1 = $('#qdate1').datebox('getValue');
			var qdate2 = $('#qdate2').datebox('getValue');
		    $('#info').html('');
			if(qdate1 > maxDate || qdate2 > maxDate){
				$('#info').html('日期不能大于' + maxDate);
				return;
			}
			param.qdate1 = qdate1;
			param.qdate2 = qdate2;
			$('#tab').datagrid({
			    title:'玩家基本信息',
			    queryParams:param,
				singleSelect:true,
				idField:'player',
				fitColumns:true,
				height:400,
				url:'ajax/retentionRate_gets',
				loadMsg:'正在查询...',
				onLoadSuccess:function(data){
				},
				onLoadError:function(){
				    alert('数据加载错误');
				},
				columns:[[
					{field:'date',title:'日期',width:20},
					{field:'rcount',title:'注册玩家',width:20},
					{field:'lcount',title:'当日登录玩家',width:20},
					{field:'morrowlcount',title:'次日登录玩家',width:20},
					{field:'alternatelcount',title:'隔日登录玩家',width:20},
					{field:'rate1',title:'次日留存率%',width:20},
					{field:'rate2',title:'隔日留存率%',width:20}
				]]
			});
		}
		$(window).keydown(function(event){
		  switch (event.keyCode) {
		    case 13:
		        query();
				break;
			default:
				break;
		   }
		});
	</script>
  </head>
  <body>
  <div id="title"><label>其他功能&gt;&gt;留存率</label></div>
    <div id="thisform">
        <fieldset>
        <legend>查询条件</legend>
            <input id="maxDate" type="hidden" value="${maxDate }">
			<label for="qdate1">日期段：</label><input id="qdate1" type="text" name="qdate1" class="easyui-datebox" value="${maxDate }">&nbsp;-&nbsp;<input id="qdate2" type="text" name="qdate2" class="easyui-datebox" value="${maxDate }">&nbsp;&nbsp;<button type="button" onclick="query();">查询</button><br/>&nbsp;&nbsp;<label id="info" style="color: red;"></label>
		</fieldset>
	</div>
	<table id="tab"></table>
  </body>
</html>
