package cc.ywxm.action.gop;

import javax.annotation.Resource;

import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import cc.ywxm.action.PageableAction;
import cc.ywxm.constant.Const;
import cc.ywxm.model.gop.User;
import cc.ywxm.service.UserService;

@SuppressWarnings("serial")
@Controller
@Scope("prototype")
public class TestAction extends PageableAction
{
	private Integer userId;
	private String username;
	private String password;
	private String rand;
	private User user;
	@Resource
	private UserService userService;

	/**
	 * 账号管理界面（包括查询）
	 * 
	 * @return
	 */
	public String index()
	{
		userId = (Integer) session.get(Const.SESSION_USERID);
		if (userId == null)
		{
			return LOGIN;
		} else
		{
			user = userService.get(userId);
			username = user.getUsername();
			return SUCCESS;
		}
	}

	public String login()
	{
		return SUCCESS;
	}

	public Integer getUserId()
	{
		return userId;
	}

	public void setUserId(Integer userId)
	{
		this.userId = userId;
	}

	public String getUsername()
	{
		return username;
	}

	public void setUsername(String username)
	{
		this.username = username;
	}

	public String getPassword()
	{
		return password;
	}

	public void setPassword(String password)
	{
		this.password = password;
	}

	public User getUser()
	{
		return user;
	}

	public void setUser(User user)
	{
		this.user = user;
	}

}
