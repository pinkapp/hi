<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@page import="java.io.Writer"%>
<%@ taglib prefix="s" uri="/struts-tags"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html>
<html>
	<head>
		<base href="<%=basePath%>">
		<title>亿网星漫游戏-首页</title>
		<meta http-equiv="pragma" content="no-cache">
		<meta http-equiv="cache-control" content="no-cache">
		<meta http-equiv="expires" content="0">
		<meta http-equiv="keywords" content="ywxm,亿网星漫">
		<meta http-equiv="description" content="亿网星漫">
		<link rel="stylesheet" type="text/css" href="css/styles.css">
	</head>
	<body>
	    <div id="page" >
		<jsp:include page="commons/header.jsp"></jsp:include>
		<div id="body">
		<div>
			<!-- 用户  -->
			<div class="widget">
				<div class="body">
					<!-- 未登录 -->
					<s:if test="username==null">
						<s:form action="login" method="post" namespace="/">
							<table border="0" cellspacing="0" cellpadding="4">
								<s:label name="message" />
								<tr>
									<td>
										<label>
											用户名
										</label>
									</td>
									<td>
										<input name="username" value="test"/>
									</td>
								</tr>
								<tr>
									<td>
										<label>
											密码
										</label>
									</td>
									<td>
										<input name="password" type="password" value="888888"/>
									</td>
								</tr>
								<tr>
									<td>
										<label>
											验证码
										</label>
									</td>
									<td>
										<input name="rand" />
										<img src="rand.action" onclick="changeValidateCode(this)"
											alt="点击刷新" />
									</td>
								</tr>
								<tr>
									<td colspan="2" align="center">
										<a href="reg.jsp">
											注册
										</a>
										&nbsp;&nbsp;
										<s:submit value='登录' />
										<s:checkbox name="autoLogin" />
										<label style="font-size: 12px;">
											自动登录
										</label>
									</td>
								</tr>
							</table>
						</s:form>
					</s:if>
					<!-- 已登录  -->
					<s:else>
						<table border="0" cellpadding="0" cellspacing="0">
							<tr>
								<td>
									<s:if test="portraitUrl==null||portraitUrl==''">
										<img src="<%=basePath%>images/noavatar_middle.gif"
											class="user_avatar" alt="" />
									</s:if>
									<s:else>
										<img src="<%=basePath%>upload/portrait/${portraitUrl}"
											class="user_avatar" alt="" />
									</s:else>
								</td>
								<td>
									<h2>
										${username }
									</h2>
									<br>
									<s:a href="user">
										查看我的个人中心
									</s:a>
									<a href="<%=basePath%>logout" class="primaryColor">注销
										&gt;&gt;</a>
									<br>
									<p>
										<span>上次登录：${lastTime }</span>
									</p>
								</td>
							</tr>
						</table>
					</s:else>
					<div>
						<a href="user/forgotpass">找回密码</a>
						<s:a href="user/security">
							用户安全
						</s:a>
						<br>
						<s:a href="user/editpass">
							修改密码
						</s:a>
						<s:a href="order/recharge?step=1">
							游戏充值
						</s:a>
					</div>
				</div>
			</div>
			<!-- 首页左边 -->
			<div>
				<!--最新开服-->
				<div class="widget">
					<div class="header">
						<div class="title">
							最新开服
						</div>
					</div>
					<div class="body">
						<table class="datatable">
							<tr>
								<td>
									时间
								</td>
								<td>
									游戏名称
								</td>
								<td>
									服务器
								</td>
							</tr>
							<s:iterator value="gameServers">
								<tr>
									<td>
										${otime }
									</td>
									<td>
										${game }
									</td>
									<td>
										<a href="${url }" target="blank">${serverName }</a>
									</td>
								</tr>
							</s:iterator>
						</table>
					</div>
				</div>
			</div>
		</div>
		</div>
		<jsp:include page="commons/footer.jsp"></jsp:include>
		</div>
	</body>
</html>
