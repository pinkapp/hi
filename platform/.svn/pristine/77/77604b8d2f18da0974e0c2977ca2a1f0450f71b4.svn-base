body,h1,h2,h3,h4,h5,h6,hr,p,blockquote,dl,dt,dd,ul,ol,li,pre,form,fieldset,legend,button,input,textarea,th,td{margin: 0;padding: 0;}
body,button,input,select,textarea {font: 12px/ 1.5 tahoma, arial, \5b8b\4f53;}
#page,#header,#page,#content,#footer {margin-left: auto;margin-right: auto;}
#header { height:100px; margin-bottom:5px;}
#page {width: 950px;}
#body {height: 600px};
#footer { height:60px;}
#container {margin:0 auto; width:100%;}

#menu { height:30px;border-left: #dadada 1px solid;border-top:#dadada 1px solid;border-right: #dadada 1px solid;}
#mainContent { height:600px;border: #dadada 1px solid;}
#sidebar { float:left; width:200px; height:500px; border-right: #dadada 1px solid;}
#content { margin-left:205px !important; margin-left:202px; height:500px;}
ul .m1{font-size: 16px;font-weight: bold;}
ul .m2{font-size: 14px;}

/*当content设定高度后，3像素会跑到content外侧，这样，我们用!important修正在ie下向左多浮动2像素，加上3像素的bug正好是5像素，所以在火狐和IE下显示是一样的*/
.adminleft {float: left;width: 28%;}
.adminright {margin-left: 10px;float: left;width: 70%;}

/* 类似于挂件的东西都用这个 start */
.widget {border: 1px solid #dadada;border-radius: 3px;-o-border-radius: 3px;-ms-border-radius: 3px;-moz-border-radius: 3px;-webkit-border-radius: 3px;margin-bottom: 10px;/* 以下是让容器居中 */margin-left: auto;margin-right: auto;}
.widget .header {height: 32px;background: url('../images/widget_header.gif') repeat-x;border-bottom: 1px solid #dadada;overflow: hidden;}
.widget .header .title {float: left;padding: 8px 10px;font-size: 15px;line-height: 100%;background: url('../images/widget_icon.gif') no-repeat left center;color: #333;}
.widget .header .addition {float: right;padding: 10px 0px 8px 10px;margin-right: 5px;font-size: 12px;line-height: 12px;}
.widget .body {padding: 10px;text-align: left;}
/* 类似于挂件的东西都用这个 end */

.info {font-size: 12px;}
/* 提示信息样式 */
.highLightInfo {color: red;font-size: 12px;}

a:visited {color: #000000}
a:active {color: #000000}
a {color:#36c;text-decoration:none;cursor: hand;}
a:hover {color:#f60;text-decoration:underline;}
li {list-style-type: none;}
input {font-family: '宋体'}
.title1 {font-size: 14px;font-weight:bold;padding-top:6px;	margin-left:10px;margin-right:10px;border-bottom: #dadada 1px solid;overflow: hidden;}
.title2 {font-size: 15px;padding-top: 6px;margin-left:10px;margin-right:10px;border-bottom: 1px dashed #cccccc;overflow: hidden}
.asterisk {color: red;}
/* datatable */
.datatable {border: 1px solid #D6DDE6;border-collapse: collapse;width: 100%;}
.datatable td {border: 1px solid #D6DDE6;padding: 5px;}
.datatable th {border: 1px solid #828282;background-color: #BCBCBC;text-align: left;padding: 5px;}
.datatable tr.altrow {background-color: #DFE7F2;color: #000000;}
